<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/CustomTheme"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVoucher"
        style="@style/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/h1"
        app:cardCornerRadius="@dimen/h2"
        android:layout_margin="@dimen/h2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/h2"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_90"
                android:layout_height="@dimen/_90"
                android:src="@drawable/ic_logo"
                android:layout_alignParentStart="true"
                android:id="@+id/imgFoto"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red1"
                android:textSize="@dimen/text_h3"
                android:textStyle="bold"
                android:maxLines="2"
                android:fontFamily="@font/bauhaus"
                android:layout_toEndOf="@+id/imgFoto"
                android:layout_marginTop="@dimen/h2"
                android:layout_marginStart="@dimen/h2"
                android:id="@+id/textNamaMerchant"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_h2"
                android:textStyle="bold"
                android:maxLines="2"
                android:fontFamily="@font/bauhaus"
                android:layout_toEndOf="@+id/imgFoto"
                android:layout_marginStart="@dimen/h2"
                android:id="@+id/textNamaProduk"
                android:layout_below="@+id/textNamaMerchant"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_h2"
                android:textStyle="bold"
                android:maxLines="1"
                android:fontFamily="@font/bauhaus"
                android:layout_toEndOf="@+id/imgFoto"
                android:layout_marginStart="@dimen/h2"
                android:id="@+id/textHargaProduk"
                android:layout_below="@+id/textNamaProduk"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray1"
                android:textSize="@dimen/text_h2"
                android:fontFamily="@font/bauhaus"
                android:layout_below="@+id/textHargaProduk"
                android:layout_toEndOf="@+id/imgFoto"
                android:id="@+id/textAlamat"
                android:layout_marginStart="@dimen/h2"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray1"
                android:textSize="@dimen/text_h2"
                android:fontFamily="@font/bauhaus"
                android:layout_below="@+id/textAlamat"
                android:layout_toEndOf="@+id/imgFoto"
                android:id="@+id/textJumlah"
                android:layout_marginStart="@dimen/h2"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray1"
                android:textSize="@dimen/text_h2"
                android:fontFamily="@font/bauhaus"
                android:layout_below="@+id/textJumlah"
                android:layout_toEndOf="@+id/imgFoto"
                android:id="@+id/textPromo"
                android:layout_marginStart="@dimen/h2"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray1"
                android:textSize="@dimen/text_h2"
                android:fontFamily="@font/bauhaus"
                android:layout_below="@+id/textPromo"
                android:layout_toEndOf="@+id/imgFoto"
                android:id="@+id/textTanggal"
                android:layout_marginStart="@dimen/h2"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_h2"
                android:text="@string/gunakan_voucher"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textTanggal"
                android:layout_marginTop="@dimen/h2"
                android:layout_marginEnd="@dimen/h2"
                android:paddingEnd="@dimen/h2"
                android:paddingStart="@dimen/h2"
                android:backgroundTint="@color/colorPrimary"
                android:visibility="gone"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>