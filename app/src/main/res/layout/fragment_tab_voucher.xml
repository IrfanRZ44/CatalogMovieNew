<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.telkomsel.merchant.ui.merchant.voucher.TabVoucherFragment">

    <data>
        <variable
            name="viewModel"
            type="id.telkomsel.merchant.ui.merchant.voucher.TabVoucherViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:theme="@style/CustomTheme"
        snackbar="@{viewModel.message}"
        >
        <include
            android:id="@+id/progress"
            layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            visible="@{viewModel.isShowLoading}"
            android:visibility="gone"
            />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40"
            app:tabSelectedTextColor="@color/white"
            app:tabGravity="fill"
            android:layout_alignParentTop="true"
            app:tabTextAppearance="@style/CustomTabText"
            app:tabIndicatorHeight="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:background="@color/colorPrimary"
            />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@+id/tabs"
            />

        <com.nambimobile.widgets.efab.ExpandableFabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnAction"
            android:visibility="gone"
            >
            <com.nambimobile.widgets.efab.Overlay
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.nambimobile.widgets.efab.ExpandableFab
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/h2"
                android:layout_marginEnd="@dimen/h2"
                app:efab_orientation="portrait"
                app:efab_icon="@drawable/ic_trolley_white"
                app:efab_iconAnimationRotationDeg="-225"
                app:efab_closingAnticipateTension="0"
                />

            <com.nambimobile.widgets.efab.FabOption
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_orientation="portrait"
                app:label_text="Scan Voucher"
                android:id="@+id/btnScan"
                android:src="@drawable/ic_camera_white"
                />

            <com.nambimobile.widgets.efab.FabOption
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_orientation="portrait"
                app:label_text="Masukkan Kode Voucher"
                android:id="@+id/btnKode"
                android:src="@drawable/ic_text_white"
                />
        </com.nambimobile.widgets.efab.ExpandableFabLayout>
    </RelativeLayout>
</layout>
