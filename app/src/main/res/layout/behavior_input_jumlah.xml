<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/h2"
    app:cardCornerRadius="@dimen/h2"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/h2"
        android:paddingEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFoto"
            android:layout_width="@dimen/_75"
            android:layout_height="@dimen/_75"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo"
            android:layout_marginTop="@dimen/h2"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_red"
            android:background="@drawable/btn_circle_gray"
            android:layout_marginTop="@dimen/h2"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/h2"
            android:layout_marginBottom="@dimen/h2"
            android:theme="@style/CustomStyle"
            android:layout_toEndOf="@+id/imgFoto"
            android:id="@+id/viewInfo"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/harga"
                style="@style/textStandardWhite"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_h3"
                android:textStyle="bold"
                android:fontFamily="@font/bauhaus"
                android:textAlignment="textStart"
                android:id="@+id/textHarga"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/harga"
                style="@style/textStandardWhite"
                android:textColor="@color/black"
                android:textSize="@dimen/text_h3"
                android:textStyle="bold"
                android:fontFamily="@font/bauhaus"
                android:textAlignment="textStart"
                android:id="@+id/textPromo"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stok"
                style="@style/textStandardWhite"
                android:textColor="@color/gray1"
                android:textSize="@dimen/text_h2"
                android:fontFamily="@font/bauhaus"
                android:textAlignment="textStart"
                android:id="@+id/textStok"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <id.telkomsel.merchant.services.numberPicker.NumberPicker
            android:id="@+id/etJumlah"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60"
            app:min="1"
            app:value="1"
            app:unit="1"
            app:focusable="false"
            app:custom_layout="@layout/number_picker_layout"
            android:textAlignment="center"
            android:layout_below="@+id/imgFoto"
            android:layout_marginTop="@dimen/h3"
            android:layout_marginBottom="@dimen/h3"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textStandardWhite"
            android:textSize="@dimen/text_h3"
            android:layout_marginLeft="@dimen/h5"
            android:layout_marginRight="@dimen/h5"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/red1"
            android:id="@+id/textStatus"
            android:layout_marginBottom="@dimen/h2"
            android:layout_below="@+id/etJumlah"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/beli_sekarang"
            android:id="@+id/btnBeli"
            android:textColor="@color/white"
            android:background="@drawable/btn_gradient_red"
            android:fontFamily="@font/bauhaus"
            android:textAllCaps="true"
            android:layout_below="@+id/textStatus"
            android:layout_marginBottom="@dimen/h3"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>