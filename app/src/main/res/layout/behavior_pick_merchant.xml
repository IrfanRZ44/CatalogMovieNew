<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/h3"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="false"
    android:theme="@style/CustomStyle"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:text="@string/pilih_merchant"
        android:textSize="@dimen/text_h5"
        android:gravity="center"
        android:layout_marginBottom="@dimen/h3"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClose"
        android:src="@drawable/ic_close_red"
        android:background="@drawable/btn_circle_gray"
        android:layout_alignParentEnd="true"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etSearch"
        style="@style/customEditTextOutlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h2"
        android:hint="@string/nama_merchant"
        android:textColorHint="@color/gray2"
        app:errorEnabled="true"
        android:layout_below="@+id/textTitle"
        >
        <com.google.android.material.textfield.TextInputEditText
            style="@style/textStandardWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textStandardWhite"
        android:textSize="@dimen/text_h3"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:id="@+id/textStatus"
        android:layout_below="@+id/etSearch"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcRequest"
        android:layout_margin="@dimen/h2"
        android:layout_below="@+id/textStatus"
        />
</RelativeLayout>