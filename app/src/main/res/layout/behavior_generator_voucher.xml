<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/h3"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="false"
    android:theme="@style/CustomTheme"
    >
    <androidx.appcompat.widget.AppCompatTextView
        android:text="@string/informasi_voucher"
        android:textSize="@dimen/text_h5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/h3"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        tools:ignore="RelativeOverlap"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/text_h2"
        android:gravity="center"
        android:textColor="@color/gray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMessage"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textTitle"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:background="@drawable/btn_circle_gray"
        android:src="@drawable/ic_close_red"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnClose"
        android:tint="@color/red1"
        android:fontFamily="@font/bauhaus"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMessage"
        android:id="@+id/rlCode"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_250"
            android:layout_height="@dimen/_250"
            android:id="@+id/imgCode"
            android:layout_centerHorizontal="true"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/margin_large"
            android:layout_height="@dimen/margin_large"
            android:src="@drawable/ic_logo"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnKode"
        android:layout_below="@+id/rlCode"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        android:layout_marginTop="@dimen/h3"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/kode_voucher_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textKode"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnMerchant"
        android:layout_below="@+id/lnKode"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/nama_merchant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textNamaMerchant"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnAlamat"
        android:layout_below="@+id/lnMerchant"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/alamat_merchant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textAlamat"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnKecamatan"
        android:layout_below="@+id/lnAlamat"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/kecamatan_dan_kota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textKecamatan"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnHarga"
        android:layout_below="@+id/lnKecamatan"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/harga_produk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textHarga"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnPromo"
        android:layout_below="@+id/lnHarga"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/promo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textPromo"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnJumlah"
        android:layout_below="@+id/lnPromo"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/jumlah_voucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:id="@+id/textInfoJumlah"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textJumlah"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginStart="@dimen/h6"
        android:layout_marginEnd="@dimen/h6"
        android:layout_marginTop="@dimen/h3"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/text_h3"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/bauhaus"
        android:text="@string/silahkan_tunjukkan_kode_berikut_pada_merchant_tempat_pembelian_voucher_anda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnJumlah"
        android:id="@+id/textInfo"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h3"
        android:padding="@dimen/h2"
        android:scaleType="centerCrop"
        android:background="@drawable/btn_gradient_red"
        android:layout_alignParentStart="true"
        android:drawableTop="@drawable/ic_trolley_white"
        android:drawablePadding="@dimen/h2"
        android:layout_below="@+id/textInfo"
        android:id="@+id/btnUsed"
        android:textColor="@color/white"
        android:fontFamily="@font/bauhaus"
        android:text="@string/sudah_terpakai"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h3"
        android:layout_marginStart="@dimen/h2"
        android:padding="@dimen/h2"
        android:scaleType="centerCrop"
        android:background="@drawable/btn_gradient_green"
        android:layout_alignParentEnd="true"
        android:drawableTop="@drawable/ic_map_white"
        android:drawablePadding="@dimen/h2"
        android:layout_below="@+id/textInfo"
        android:id="@+id/btnMaps"
        android:textColor="@color/white"
        android:fontFamily="@font/bauhaus"
        android:text="@string/petunjuk_arah"
        />

    <include layout="@layout/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showProgress"
        android:visibility="gone"
        android:layout_centerInParent="true"
        />
</RelativeLayout>