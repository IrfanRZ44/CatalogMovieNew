<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/h3"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="false"
    android:theme="@style/CustomTheme"
    >
    <androidx.appcompat.widget.AppCompatTextView
        android:text="@string/informasi_voucher"
        android:textSize="@dimen/text_h5"
        android:gravity="center"
        android:layout_marginBottom="@dimen/h3"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:id="@+id/rlCode"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_250"
            android:layout_height="@dimen/_250"
            android:id="@+id/imgCode"
            android:layout_centerHorizontal="true"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/margin_large"
            android:layout_height="@dimen/margin_large"
            android:src="@drawable/ic_logo"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnKode"
        android:layout_below="@+id/rlCode"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        android:layout_marginTop="@dimen/h3"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/kode_voucher_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textKode"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnMerchant"
        android:layout_below="@+id/lnKode"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/nama_merchant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textNamaMerchant"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnAlamat"
        android:layout_below="@+id/lnMerchant"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/alamat_merchant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textAlamat"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnKecamatan"
        android:layout_below="@+id/lnAlamat"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/kecamatan_dan_kota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textKecamatan"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnHarga"
        android:layout_below="@+id/lnKecamatan"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/harga_produk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textHarga"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnPromo"
        android:layout_below="@+id/lnHarga"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/promo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textPromo"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnJumlah"
        android:layout_below="@+id/lnPromo"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:text="@string/jumlah_voucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:id="@+id/textInfoJumlah"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/text_h3"
            android:textColor="@color/gray2"
            android:fontFamily="@font/bauhaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/textJumlah"
            android:maxLines="2"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginStart="@dimen/h6"
        android:layout_marginEnd="@dimen/h6"
        android:layout_marginTop="@dimen/h3"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/text_h3"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/bauhaus"
        android:text="@string/silahkan_tunjukkan_kode_berikut_pada_merchant_tempat_pembelian_voucher_anda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnJumlah"
        android:id="@+id/textInfo"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="@dimen/_60"
        android:layout_height="@dimen/_60"
        android:layout_marginEnd="@dimen/h3"
        android:layout_marginTop="@dimen/h5"
        android:layout_marginBottom="@dimen/h2"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_map_white"
        app:fabCustomSize="@dimen/_60"
        android:layout_below="@+id/textInfo"
        android:layout_toStartOf="@+id/btnDone"
        android:id="@+id/btnMaps"
        android:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"
        android:contentDescription="@string/done" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="@dimen/_60"
        android:layout_height="@dimen/_60"
        android:layout_marginEnd="@dimen/h3"
        android:layout_marginTop="@dimen/h5"
        android:layout_marginBottom="@dimen/h2"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_true_white"
        app:fabCustomSize="@dimen/_60"
        android:layout_below="@+id/textInfo"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnDone"
        android:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"
        android:contentDescription="@string/done" />
</RelativeLayout>