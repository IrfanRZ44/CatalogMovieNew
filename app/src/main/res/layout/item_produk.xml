<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/CustomTheme"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/h2"
        app:cardElevation="@dimen/h1"
        android:layout_margin="@dimen/h2"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/h2"
                app:cardElevation="0dp"
                android:id="@+id/cardFoto"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/h2"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgFoto"
                        android:layout_width="@dimen/_150"
                        android:layout_height="@dimen/_150"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_logo"
                        />
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_favorite_white"
                        android:background="@drawable/radius_gray"
                        android:padding="@dimen/h2"
                        android:id="@+id/btnFavorit"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardHarga"
                android:layout_below="@+id/cardFoto"
                android:layout_marginStart="@dimen/h2"
                android:layout_marginEnd="@dimen/h2"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_h3"
                    android:textStyle="bold"
                    android:text="@string/harga"
                    android:fontFamily="@font/bauhaus"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textStok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_h1"
                    android:text="@string/stok"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="false"
                    tools:ignore="RelativeOverlap"
                    android:fontFamily="@font/bauhaus"
                    />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_h3"
                android:maxLines="2"
                android:lines="2"
                android:text="@string/nama"
                android:layout_below="@+id/cardHarga"
                android:layout_marginStart="@dimen/h2"
                android:layout_marginTop="@dimen/h1"
                android:fontFamily="@font/bauhaus"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray3"
                android:textSize="@dimen/text_h2"
                android:maxLines="2"
                android:lines="2"
                android:text="@string/promo"
                android:layout_below="@+id/textNama"
                android:layout_marginStart="@dimen/h2"
                android:fontFamily="@font/bauhaus"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>