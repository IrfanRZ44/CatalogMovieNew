<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.telkomsel.merchant.ui.merchant.listMerchant.TabMerchantFragment">

    <data>
        <variable
            name="viewModel"
            type="id.telkomsel.merchant.ui.merchant.listMerchant.TabMerchantViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:theme="@style/CustomTheme"
        snackbar="@{viewModel.message}"
        >
        <include
            android:id="@+id/progress"
            layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            visible="@{viewModel.isShowLoading}"
            android:visibility="gone"
            />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40"
            app:tabSelectedTextColor="@color/white"
            app:tabGravity="fill"
            android:layout_alignParentTop="true"
            app:tabTextAppearance="@style/CustomTabText"
            app:tabIndicatorHeight="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:background="@color/colorPrimary"
            />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@+id/tabs"
            />

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
            android:id="@+id/rfaLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rfal_frame_color="#ffffff"
            app:rfal_frame_alpha="0.7"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/h3"
            android:visibility="gone"
            >
            <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
                android:id="@+id/rfaBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:padding="8dp"
                app:rfab_color_normal="@color/colorPrimaryDark"
                app:rfab_color_pressed="#263238"
                app:rfab_drawable="@drawable/rfab__drawable_rfab_default"
                app:rfab_size="normal" />
        </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>
    </RelativeLayout>
</layout>
