<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.exomatik.catalogmovie.ui.movie.detailMovie.DetailMovieFragment">
    <data>
        <variable
            name="viewModel"
            type="id.exomatik.catalogmovie.ui.movie.detailMovie.DetailMovieViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/CustomStyle"
        android:background="@drawable/bg_movie"
        snackbar="@{viewModel.status}"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/h5"
            android:id="@+id/scrollView"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200"
                    android:background="@color/gray1"
                    android:src="@drawable/ic_camera_white"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imgFoto"
                    android:scaleType="centerCrop"
                    imageBoxSrc="@{viewModel.dataMovie.backdrop_path}"
                    android:onClick="@{()-> viewModel.clickFoto()}"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMain"
                    android:layout_below="@+id/imgFoto"
                    style="@style/cardView"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/h5"
                    android:layout_marginTop="-40dp"
                    android:layout_marginStart="@dimen/h2"
                    android:layout_marginEnd="@dimen/h2"
                    app:cardCornerRadius="@dimen/h2"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/h2"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rcGenre"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/h1"
                            android:layout_marginBottom="@dimen/h1"
                            android:background="@color/gray1"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textStandardWhite"
                            android:textSize="@dimen/text_h4"
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/h2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:id="@+id/textInfo"
                            android:text="@string/about_movie"
                            android:fontFamily="@font/bauhaus"
                            />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/title"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataMovie.original_title}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/release_date"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataMovie.release_date}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/companies"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataMovie.companies}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/adult"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataMovie.adult}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/rating"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataMovie.vote_average}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/overview"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataMovie.overview}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/h1"
                            android:layout_marginBottom="@dimen/h1"
                            android:background="@color/gray1"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textStandardWhite"
                            android:textSize="@dimen/text_h4"
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/h2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:id="@+id/textReview"
                            android:text="@string/user_review"
                            android:fontFamily="@font/bauhaus"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rcReview"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue1"
                            android:text="@string/show_more"
                            android:textSize="@dimen/text_h2"
                            android:textStyle="bold"
                            android:fontFamily="@font/bauhaus"
                            android:id="@+id/btnMoreReview"
                            android:onClick="@{()-> viewModel.clickMoreReview()}"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:padding="@dimen/h2"
                            android:background="@drawable/btn_circle_gray"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/h1"
                            android:layout_marginBottom="@dimen/h1"
                            android:background="@color/gray1"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textStandardWhite"
                            android:textSize="@dimen/text_h4"
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/h2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:id="@+id/textTrailer"
                            android:text="@string/trailer"
                            android:fontFamily="@font/bauhaus"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rcTrailer"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue1"
                            android:text="@string/show_more"
                            android:textSize="@dimen/text_h2"
                            android:textStyle="bold"
                            android:fontFamily="@font/bauhaus"
                            android:id="@+id/btnMoreTrailer"
                            android:onClick="@{()-> viewModel.clickMoreTrailer()}"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:padding="@dimen/h2"
                            android:background="@drawable/btn_circle_gray"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30"
                            android:layout_below="@+id/scrollView"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            visible="@{viewModel.isShowLoading}"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textStandardWhite"
            android:textSize="@dimen/text_h3"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:id="@+id/textStatus"
            showTextStatus="@{viewModel.message}"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red1"
            android:orientation="vertical"
            android:visibility="gone"
            visible="@{viewModel.isShowError}"
            android:layout_centerInParent="true"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_restart_white"
                android:background="@drawable/btn_circle_gray"
                android:layout_centerInParent="true"
                android:text="@string/try_again"
                android:textColor="@color/white"
                android:textSize="@dimen/text_h8"
                android:fontFamily="@font/bauhaus"
                android:onClick="@{()-> viewModel.onClickError()}"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>