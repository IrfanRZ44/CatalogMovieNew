<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/CustomTheme"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVoucher"
        style="@style/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/h1"
        app:cardCornerRadius="@dimen/h2"
        android:layout_margin="@dimen/h2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/h2"
            >
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:background="@drawable/btn_circle_gray"
                android:src="@drawable/ic_close_red"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnClose"
                android:tint="@color/red1"
                android:fontFamily="@font/bauhaus"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large"
                android:src="@drawable/ic_logo"
                android:layout_alignParentStart="true"
                android:id="@+id/imgFoto"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red1"
                android:textSize="@dimen/text_h3"
                android:textStyle="bold"
                android:maxLines="2"
                android:fontFamily="@font/bauhaus"
                android:layout_toEndOf="@+id/imgFoto"
                android:layout_marginTop="@dimen/h2"
                android:layout_marginStart="@dimen/h2"
                android:id="@+id/textNamaMerchant"
                tools:ignore="RelativeOverlap" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_h2"
                android:textStyle="bold"
                android:maxLines="2"
                android:fontFamily="@font/bauhaus"
                android:layout_toEndOf="@+id/imgFoto"
                android:layout_marginStart="@dimen/h2"
                android:id="@+id/textNamaProduk"
                android:layout_below="@+id/textNamaMerchant"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_h2"
                android:textStyle="bold"
                android:maxLines="1"
                android:fontFamily="@font/bauhaus"
                android:layout_toEndOf="@+id/imgFoto"
                android:layout_marginStart="@dimen/h2"
                android:id="@+id/textHargaProduk"
                android:layout_below="@+id/textNamaProduk"
                />
            <androidx.appcompat.widget.AppCompatRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRating"
                android:stepSize="1"
                android:numStars="5"
                android:rating="0"
                android:layout_below="@+id/textHargaProduk"
                android:layout_toEndOf="@+id/imgFoto"
                android:layout_marginStart="@dimen/h2"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>