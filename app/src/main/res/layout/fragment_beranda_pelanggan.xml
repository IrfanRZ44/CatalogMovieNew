<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.telkomsel.merchant.ui.pelanggan.beranda.BerandaPelangganFragment">
    <data>
        <variable
            name="viewModel"
            type="id.telkomsel.merchant.ui.pelanggan.beranda.BerandaPelangganViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        snackbar="@{viewModel.status}"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.santalu.autoviewpager.AutoViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150"
                android:overScrollMode="never"
                app:avp_autoScroll="true"
                app:avp_indeterminate="true"
                android:layout_alignParentTop="true"
                />

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dotsColor="@android:color/white"
                app:selectedDotColor="@color/colorPrimary"
                app:dotsStrokeColor="@android:color/white"
                app:dotsCornerRadius="8dp"
                app:dotsSize="16dp"
                app:dotsSpacing="4dp"
                app:dotsStrokeWidth="2dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/cardHeader"
                android:layout_marginTop="-28dp"
                android:layout_below="@+id/viewPager"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="@dimen/h2"
                app:cardElevation="@dimen/h1"
                android:layout_marginStart="@dimen/h2"
                android:layout_marginEnd="@dimen/h2"
                android:layout_marginBottom="@dimen/h2"
                android:layout_marginTop="-8dp"
                android:id="@+id/cardHeader"
                android:visibility="gone"
                android:layout_below="@+id/viewPager"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_large"
                        android:layout_weight="0.5"
                        android:drawableStart="@drawable/ic_poin"
                        android:drawablePadding="@dimen/h1"
                        android:paddingStart="@dimen/h2"
                        android:paddingEnd="0dp"
                        android:text="@={viewModel.poin}"
                        android:textSize="@dimen/text_h2"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bauhaus"
                        android:layout_margin="@dimen/h1"
                        android:background="@drawable/btn_circle_gray"
                        android:textAlignment="textStart"
                        android:onClick="@{()-> viewModel.onClickPoin()}"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_large"
                        android:layout_weight="0.5"
                        android:drawableStart="@drawable/ic_voucher"
                        android:drawablePadding="@dimen/h1"
                        android:paddingStart="@dimen/h2"
                        android:paddingEnd="0dp"
                        android:text="@string/voucher_saya"
                        android:textSize="@dimen/text_h2"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bauhaus"
                        android:layout_margin="@dimen/h1"
                        android:background="@drawable/btn_circle_gray"
                        android:textAlignment="textStart"
                        android:onClick="@{()-> viewModel.onClickVoucher()}"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcKategori"
                android:layout_below="@+id/cardHeader"
                />
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/swipeRefresh"
                android:layout_below="@+id/rcKategori"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcProduk"
                    />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStandardWhite"
                android:textSize="@dimen/text_h3"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:id="@+id/textStatus"
                showTextStatus="@{viewModel.message}"
                />

            <include layout="@layout/progress_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                visible="@{viewModel.isShowLoading}"
                android:id="@+id/progress"
                android:visibility="gone"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <com.nambimobile.widgets.efab.ExpandableFabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.nambimobile.widgets.efab.ExpandableFab
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/h2"
                android:layout_marginEnd="@dimen/h2"
                app:efab_orientation="portrait"/>

            <com.nambimobile.widgets.efab.FabOption
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_orientation="portrait"
                app:label_text="Masa Berlaku Promo"
                android:id="@+id/btnSortTglKadaluarsa"
                android:src="@drawable/ic_up_white"
                />

            <com.nambimobile.widgets.efab.FabOption
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_orientation="portrait"
                app:label_text="Poin"
                android:id="@+id/btnSortPoin"
                android:src="@drawable/ic_up_white"
                />

            <com.nambimobile.widgets.efab.FabOption
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_orientation="portrait"
                app:label_text="Stok"
                android:id="@+id/btnSortStok"
                android:src="@drawable/ic_up_white"
                />

        </com.nambimobile.widgets.efab.ExpandableFabLayout>
    </RelativeLayout>
</layout>