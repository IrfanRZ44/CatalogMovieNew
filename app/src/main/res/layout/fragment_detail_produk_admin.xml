<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.telkomsel.merchant.ui.merchant.detailProduk.DetailProdukAdminFragment">
    <data>
        <variable
            name="viewModel"
            type="id.telkomsel.merchant.ui.merchant.detailProduk.DetailProdukAdminViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/CustomStyle"
        android:background="@color/white"
        snackbar="@{viewModel.message}"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.santalu.autoviewpager.AutoViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250"
                android:overScrollMode="never"
                app:avp_autoScroll="false"
                app:avp_indeterminate="false"
                android:layout_alignParentTop="true"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMain"
                style="@style/cardView"
                android:layout_below="@+id/viewPager"
                app:cardCornerRadius="@dimen/_30"
                app:cardElevation="@dimen/h2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/h2"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="-30dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/h2"
                    >
                    <View
                        android:layout_width="@dimen/_100"
                        android:layout_height="1dp"
                        android:background="@color/gray1"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/viewGaris"
                        android:layout_marginTop="@dimen/h2"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.hargaProduk}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_h3"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_regular"
                        android:id="@+id/textHarga"
                        android:layout_below="@+id/viewGaris"
                        android:layout_marginTop="@dimen/h2"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.viewProduk}"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/text_h2"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_below="@+id/viewGaris"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="false"
                        android:id="@+id/textView"
                        android:layout_marginTop="@dimen/h2"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.dataProduk.nama}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_h5"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_below="@+id/textView"
                        android:layout_marginTop="@dimen/h2"
                        android:id="@+id/textNama"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.dataProduk.deskripsi}"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/text_h2"
                        android:textStyle="bold"
                        android:maxLines="10"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_below="@+id/textNama"
                        android:layout_marginTop="@dimen/h2"
                        android:id="@+id/textDesc"
                        />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardVoucher"
                        style="@style/cardView"
                        android:layout_below="@+id/textDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/h1"
                        app:cardCornerRadius="@dimen/h2"
                        android:layout_margin="@dimen/h2"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_90"
                                android:layout_height="@dimen/_90"
                                android:src="@drawable/ic_logo"
                                android:layout_alignParentStart="true"
                                android:id="@+id/imgFotoProfil"
                                android:scaleType="centerInside"
                                imageSrc="@{viewModel.dataMerchant.foto_profil}"
                                android:onClick="@{()-> viewModel.clickFotoProfil()}"
                                android:layout_centerVertical="true"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.promoProduk}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_toEndOf="@+id/imgFotoProfil"
                                android:layout_marginTop="@dimen/h2"
                                android:layout_marginStart="@dimen/h2"
                                android:id="@+id/textNamaMerchant"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.alamatProduk}"
                                android:textColor="@color/gray1"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_below="@+id/textNamaMerchant"
                                android:layout_toEndOf="@+id/imgFotoProfil"
                                android:id="@+id/textAlamat"
                                android:layout_marginStart="@dimen/h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.stokProduk}"
                                android:textColor="@color/gray1"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_below="@+id/textAlamat"
                                android:layout_toEndOf="@+id/imgFotoProfil"
                                android:id="@+id/textStok"
                                android:layout_marginStart="@dimen/h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.tanggalProduk}"
                                android:textColor="@color/gray1"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_below="@+id/textStok"
                                android:layout_toEndOf="@+id/imgFotoProfil"
                                android:id="@+id/textTanggal"
                                android:layout_marginStart="@dimen/h2"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnTukarPoin"
                                disableButton="@{viewModel.isShowLoading}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{()-> viewModel.onClickTukarPoin()}"
                                android:text="@={viewModel.poinProduk}"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_h2"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/textTanggal"
                                android:layout_marginTop="@dimen/h2"
                                android:layout_marginEnd="@dimen/h2"
                                android:paddingEnd="@dimen/h2"
                                android:paddingStart="@dimen/h2"
                                android:backgroundTint="@color/colorPrimary"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_40"
                app:dotsColor="@android:color/white"
                app:selectedDotColor="@color/colorPrimary"
                app:dotsStrokeColor="@android:color/white"
                app:dotsCornerRadius="8dp"
                app:dotsSize="16dp"
                app:dotsSpacing="4dp"
                app:dotsStrokeWidth="2dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/cardMain"
                />
        </RelativeLayout>

        <include layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            visible="@{viewModel.isShowLoading}"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
            android:id="@+id/rfaLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rfal_frame_color="#ffffff"
            app:rfal_frame_alpha="0.7"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/h3"
            android:visibility="gone"
            >
            <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
                android:id="@+id/rfaBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:padding="8dp"
                app:rfab_color_normal="@color/colorPrimaryDark"
                app:rfab_color_pressed="#263238"
                app:rfab_drawable="@drawable/rfab__drawable_rfab_default"
                app:rfab_size="normal" />
        </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>
    </RelativeLayout>
</layout>